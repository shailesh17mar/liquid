{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["dom", "es2017"],
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "target": "es2015",
    "allowJs": true,
    "jsx": "react",
    "types": ["chrome"]
  },
  "include": ["src/custom.d.ts", "src/**/*.ts"]
}
